<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskList" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="CalendarStyle" parent="Widget.Material3.Button.TextButton">
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SnackbarTextStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="SmallElevatedButton" parent="Widget.Material3.Button.TextButton">
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/transparent</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.Material3.Button.TextButton">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>